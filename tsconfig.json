// Arquivo de configuração principal do TypeScript para o projeto React/Vite
{
  "compilerOptions": {
    "target": "ESNext", // Define a versão alvo do JavaScript
    "useDefineForClassFields": true, // Usa 'define' para campos de classe
    "lib": ["DOM", "DOM.Iterable", "ESNext"], // Bibliotecas incluídas
    "allowJs": false, // Não permite arquivos JS
    "skipLibCheck": true, // Ignora checagem de tipos em libs
    "esModuleInterop": false, // Não usa interop de módulos ES
    "allowSyntheticDefaultImports": true, // Permite importação default sintética
    "strict": true, // Ativa todas as verificações estritas
    "forceConsistentCasingInFileNames": true, // Força nomes de arquivos consistentes
    "module": "ESNext", // Usa módulos ESNext
    "moduleResolution": "Node", // Resolve módulos como Node.js
    "resolveJsonModule": true, // Permite importar arquivos JSON
    "isolatedModules": true, // Garante que cada arquivo seja um módulo isolado
    "noEmit": true, // Não gera arquivos de saída
    "jsx": "react-jsx" // Usa JSX do React
  },
  "include": ["src"], // Inclui a pasta src
  "references": [{ "path": "./tsconfig.node.json" }] // Referencia configuração para Node
}